# Django Settings
SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=api.niochat.com.br,admin.niochat.com.br,app.niochat.com.br

# Database
DATABASE_URL=postgresql://niochat_user:your-postgres-password@postgres:5432/niochat
POSTGRES_PASSWORD=your-postgres-password-here

# Redis (using existing Redis from finnyNet)
REDIS_URL=redis://redis:6379

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# File Upload
MEDIA_URL=/media/
STATIC_URL=/static/

# CORS Settings
CORS_ALLOWED_ORIGINS=https://app.niochat.com.br,https://admin.niochat.com.br

# Celery Settings
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Security
CSRF_TRUSTED_ORIGINS=https://app.niochat.com.br,https://admin.niochat.com.br,https://api.niochat.com.br

# Logging
LOG_LEVEL=INFO 